def download_file_from_sftp_to_network(network_path, host, port, username, password, remote_file_path, file_prefix):
    try:
        transport = paramiko.Transport((host, port))
        transport.connect(username=username, password=password)
        sftp = paramiko.SFTPClient.from_transport(transport)
        
        files = sftp.listdir(remote_file_path)
        files = [file for file in files if file.startswith(file_prefix)]
        files.sort(reverse=True)
        
        if files:
            latest_file = files[0]
            local_file_path = os.path.join(network_path, latest_file)
            sftp.get(os.path.join(remote_file_path, latest_file), local_file_path)
            sftp.close()
            transport.close()
            return local_file_path
        else:
            sftp.close()
            transport.close()
            return None
    except Exception as e:
        print(f"An error occurred during file download: {e}")
        return None

def upload_file_to_sftp(file_path, host, port, username, password, remote_path):
    try:
        transport = paramiko.Transport((host, port))
        transport.connect(username=username, password=password)
        sftp = paramiko.SFTPClient.from_transport(transport)
        
        file_name = os.path.basename(file_path)
        sftp.put(file_path, os.path.join(remote_path, file_name))
        sftp.close()
        transport.close()
    except Exception as e:
        print(f"An error occurred during file upload: {e}")

