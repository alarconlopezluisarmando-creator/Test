try:
    df_quotes = pd.read_csv(quote_report_path)
    df_tracker = pd.read_excel(quote_tracker_path, engine='openpyxl')
except FileNotFoundError as e:
    # ...

# Clean column names
df_quotes.columns = df_quotes.columns.str.strip()
df_tracker.columns = df_tracker.columns.str.strip()

# *** ADD THIS BLOCK FOR ROBUST COLUMN HANDLING ***
# 1. Standardize column names by removing special/non-alphanumeric characters.
#    This converts 'QT:Quote ID ' (with hidden char) to 'QT:QuoteID'
df_tracker.columns = df_tracker.columns.str.replace(r'[^a-zA-Z0-9]', '', regex=True)

# 2. Rename the affected columns to their expected *cleaned* names.
df_tracker.rename(columns={
    'QTQuoteID': 'QT:Quote ID',          # The one that is currently failing
    'QTRootCellID': 'QT:Root Cell ID'    # The one that is renamed later
}, inplace=True)
